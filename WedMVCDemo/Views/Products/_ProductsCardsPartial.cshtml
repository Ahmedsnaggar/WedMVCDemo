@model Product

<div class="card col-md-4 mb-3">
    <div class="card-header">
        <h3>@Model.ProductName</h3>
        <h5>Category : @Model.category.CategoryName --- Price : @Model.DefaultPrice</h5>
    </div>
    <div class="card-body">
        @if (Model.ProductImage == "" || Model.ProductImage == null)
        {
            <img src="\Images\Products\no-image.jpg" alt="No image" width="100%" height="100%" />
        }
        else
        {
            <img src="@Model.ProductImage" alt="No image" width="100%" height="100%" />
        }
    </div>
    <div class="card-footer" style="text-align:center">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Details", "Details", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })
    </div>
</div>