@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products List";
}
<div class="row">
    <div class="col-md-6">
    <h1>Products List</h1>
    </div>
    <div class="col-md-6">
        <div class=" float-end btn btn-success text-light">
            <a asp-action="Create" class="text-light" style="text-decoration:none;">New</a>
        </div>
    </div>
</div>
<hr />
<form asp-action="index" method="get">
    <label class="control-label">Search</label>
    <div class="row">
        <div class="col-md-6">
            <input type="text" name="search" class="form-control" value="@ViewBag.Search" />
        </div>
        <div class="col-md-6">
        <button type="submit" class="btn btn-info">Search</button>
        </div>
    </div>
    
</form>
<hr />
<div class="row">
@foreach(var item in Model)
{
        <partial name="_ProductsCardsPartial" model="item" />
}
</div>
